# /etc/default/grub
# Ansible managed: Do NOT edit this file manually!

GRUB_TIMEOUT={{ grub_timeout | default('5') }}
GRUB_DISTRIBUTOR="{{ grub_distributor | default(\"$(sed 's, release .*$,,g' /etc/system-release)\") }}"
GRUB_DEFAULT={{ grub_default | default('saved') }}
GRUB_DISABLE_SUBMENU={{ grub_disable_submenu | default('true') }}
GRUB_TERMINAL_OUTPUT="{{ grub_terminal_output | default('console') }}"
GRUB_CMDLINE_LINUX="{{ grub_cmdline_linux | default('rd.lvm.lv=almalinux_developer/root') }}"
GRUB_DISABLE_RECOVERY="{{ grub_disable_recovery | default('true') }}"
GRUB_ENABLE_BLSCFG={{ grub_enable_blscfg | default('true') }}

# Custom Boot Image and Boot Text
GRUB_BACKGROUND="{{ grub_boot_image | default('/path/to/default/image.png') }}"
GRUB_MENU_PICTURE="{{ grub_boot_text_image | default('/path/to/default/text_image.png') }}"
GRUB_HIDDEN_TIMEOUT=0
GRUB_HIDDEN_TIMEOUT_QUIET=true
